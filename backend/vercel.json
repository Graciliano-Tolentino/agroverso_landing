{
  // ============================================================================================
  // ‚öôÔ∏è vercel.json ‚Äì Configura√ß√£o de Deploy FastAPI Backend ‚Ä¢ Agroverso
  // ============================================================================================
  // üìå Este arquivo informa √† Vercel como construir e rotear o backend em Python (FastAPI).
  //     Ele permite que chamadas para /api/* sejam tratadas pela aplica√ß√£o backend.
  // --------------------------------------------------------------------------------------------
  // ‚ú® Escrito com sabedoria (separa√ß√£o de dom√≠nios), for√ßa (desempenho est√°vel) e beleza
  //     (estrutura minimalista, padronizada e elegante para ambientes fullstack).
  // ============================================================================================

  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    }
  ]
}

{
  // ============================================================================================
  // üß≠ Rotas Adicionais e Fallback Inteligente ‚Äì Vers√£o Estendida Agroverso
  // ============================================================================================
  // üìå Esta extens√£o permite:
  //   - Manter o frontend funcional mesmo se o backend estiver fora do ar
  //   - Servir arquivos est√°ticos HTML/CSS/JS normalmente
  //   - Redirecionar corretamente chamadas para a API separadamente do cliente
  // ============================================================================================

  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
